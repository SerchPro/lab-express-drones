<h2>Available drones</h2>
<br>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Propellers</th>
      <th scope="col">Max speed</th>
    </tr>
  </thead>
  <tbody>
      {{#each drones}}
    <tr>
      <th scope="row">{{@index}}</th>
      <td>{{name}}</td>
      <td>{{propellers}}</td>
      <td>{{maxSpeed}}</td>
      <td>
        <a type="button" class="btn btn-outline-primary" href="/drones/{{_id}}/edit">Edit drone</a>
      </td>
      <td>
          <form action="/drones/{{_id}}/delete" method="POST">
            <button type="submit" class="btn btn-outline-danger"  >delete drone </button>
          </form>
      </td>
    </tr>
    {{/each}}

  </tbody>
</table>

<a type="button" class="btn btn-outline-success" href="/drones/create">Add drone</a>