
<div class="container">
    <h2>Create a new drone</h2>
    <br>
    <div class="row">
        <div class ="col-4">
            <form method ="POST" action ="/drones/create">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name">
                </div>
                <div class="mb-3">
                    <label for="propellers" class="form-label">Propellers</label>
                    <input type="number" class="form-control" id="propellers" name="propellers">
                </div>
                <div class="mb-3">
                    <label for="maxSpeed" class="form-label">Max speed</label>
                    <input type="number" class="form-control" id="maxSpeed" name="maxSpeed">
                </div>
                <a type="button" class="btn btn-outline-danger" href="/drones">Cancel</a>
                <button type="submit" class="btn btn-primary">Add drone</button>
            </form>
        </div>
    </div>
</div>

